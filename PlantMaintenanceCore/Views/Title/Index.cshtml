@model PlantMaintenanceCore.Models.ViewModels.DisplayTitleViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h1>@ViewData["Title"]</h1>
    <a class="btn btn-info" href="Title/edit" style="float:right; margin-bottom:30px;">Add New</a>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title Name</th>
            <th>Title Description</th>
            <th>Title is Active</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.TitleName</td>
                <td>@item.Description</td>
                <td>@item.IsActive</td>
                <td>
                    <a class="btn btn-info" href="Title/edit?id=@item.Id" style="float:right;">Edit</a>
                    <a class="btn btn-danger" href="Title/delete?id=@item.Id" style="float:right;">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>