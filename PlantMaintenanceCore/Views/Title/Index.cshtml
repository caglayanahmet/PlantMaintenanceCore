@model PlantMaintenanceCore.Models.ViewModels.DisplayTitleViewModel
@{
    ViewData["Title"] = "Titles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h1>@ViewData["Title"]</h1>
    <a class="btn btn-info" href="/Title/edit/" style="float:right; margin-bottom:30px;">Add New</a>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title Name</th>
            <th>Title Description</th>
            <th hidden="">Title is Active</th>
            <th style="width: 150px">Action</th>

        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.TitleName</td>
                <td>@item.Description</td>
                <td hidden="">@(item.IsActive==true?"Active":"Passive")</td>
                <td>
                    <a class="btn btn-success" href="/Title/edit/@item.Id/" style="float:right;">Edit</a>
                    <a class="btn btn-danger" href="/Title/delete/@item.Id/" style="float:right;">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>