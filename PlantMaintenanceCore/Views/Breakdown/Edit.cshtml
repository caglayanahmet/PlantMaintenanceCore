@model PlantMaintenanceCore.Models.ViewModels.EditBreakdownViewModel
@{
    ViewData["Title"] = "Edit Breakdowns";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Breakdown", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.PlantId,"Plant Name")
        @Html.DropDownListFor(x => x.PlantId, Model.Plants,"Select a Plant", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PlantId)
        <br />
        @Html.LabelFor(x => x.MachineId,"Machine Name")
        @Html.DropDownListFor(x => x.MachineId, Model.Machines, "Select a Machine", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.MachineId)
        <br />
        @Html.LabelFor(x => x.BreakdownTypeId,"Breakdown Type")
        @Html.DropDownListFor(x => x.BreakdownTypeId, Model.BreakdownTypes, "Select a BreakdownType", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.BreakdownTypeId)
        <br />
        @Html.LabelFor(x => x.Description)
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control",@placeholder="Enter an explicit definition of the breakdown" })
        @Html.ValidationMessageFor(x => x.Description)
        <br />
        @Html.LabelFor(x => x.DeclareTime,"Declare Time")
        @Html.TextBoxFor(x => x.DeclareTime, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(x => x.DeclareTime)
        <br />
        @Html.LabelFor(x => x.PersonnelRequestingId,"Requesting Personnel")
        @Html.DropDownListFor(x => x.PersonnelRequestingId, Model.PersonnelsRequesting, "Select a Personnel", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PersonnelRequestingId)
        <br />
        @Html.LabelFor(x => x.PersonnelMaintenanceId,"Maintenance Personnel")
        @Html.DropDownListFor(x => x.PersonnelMaintenanceId, Model.PersonnelsRequesting, "Select a Personnel", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PersonnelMaintenanceId)
        <br />
        @Html.LabelFor(x => x.DoneTime,"Completion Time")
        @Html.TextBoxFor(x => x.DoneTime, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(x => x.DoneTime)
        <br />
        @Html.LabelFor(x => x.Urgency)
        @Html.DropDownListFor(x => x.Urgency, Model.Urgencies, "Select an Urgency", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Urgency)
        <br />
    </div>

    <div class="custom-radio" style="margin-top: 25px;margin-bottom: 15px">
        <label>
            @Html.RadioButtonFor(m => m.IsDone, true, new { @checked = "checked" }) Done
        </label>
        <label>
            @Html.RadioButtonFor(m => m.IsDone, false) Waiting
        </label>
    </div>

    <div class="custom-radio" style="margin-top: 25px;margin-bottom: 15px">
        <label>
            @Html.RadioButtonFor(m => m.IsActive, true, new { @checked = "checked" }) Active
        </label>
        <label>
            @Html.RadioButtonFor(m => m.IsActive, false) Passive
        </label>
    </div>
    <button type="submit" class="btn btn-info">Save</button>
}

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
