@model PlantMaintenanceCore.Models.ViewModels.DisplayPlantViewModel
@{
    ViewData["Title"] = "Plants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <a class="btn btn-info" href="/Plant/Edit/" style="float:right; margin-bottom:30px;">Add New</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Plant Name</th>
                    <th hidden="">Status</th>
                    <th style="width: 150px">Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.PlantName</td>
                        <td hidden="">@(item.IsActive==true?"Active":"Passive")</td>
                        <td>
                            <a class="btn btn-success" href="/Plant/Edit/@item.Id/" style="float:right;">Edit</a>
                            <a class="btn btn-danger" href="/Plant/Delete/@item.Id/" style="float:right;">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

