@model PlantMaintenanceCore.Models.ViewModels.DisplayUrgencyViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <a class="btn btn-info" href="/Urgency/edit/" style="float:right; margin-bottom:30px;">Add New</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Urgency Level Name</th>
                    <th>Description</th>
                    <th>Urgency is Active</th>
                    <th style="width: 150px">Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.UrgencyLevel</td>
                        <td>@item.Description</td>
                        <td>@(item.IsActive==true?"Active":"Passive")</td>
                        <td>
                            <a class="btn btn-success" href="/Urgency/edit/@item.Id/" style="float:right;">Edit</a>
                            <a class="btn btn-danger" href="/Urgency/delete/@item.Id/" style="float:right;">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

